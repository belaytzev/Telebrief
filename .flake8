[flake8]
# Flake8 configuration

max-line-length = 100
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    sessions

# Error codes to ignore
# E203 - whitespace before ':'
# E501 - line too long (handled by black)
# W503 - line break before binary operator
# D* - All docstring style warnings (using Google style, enforced by pylint instead)
# I100 - Import order (enforced by isort instead)
ignore = E203,E501,W503,D,I100

# Docstring conventions
docstring-convention = google

# Import order
import-order-style = google
application-import-names = src,tests
